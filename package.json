{
  "name": "decentralized-decision-frontend",
  "version": "1.0.0",
  "description": "Luckee DAO 去中心化决策系统前端",
  "type": "module",
  "private": true,
  "homepage": "https://luckeedao.github.io/decentralized_decision_frontend/",
  "repository": {
    "type": "git",
    "url": "git@github.com:LuckeeDAO/decentralized_decision_frontend.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "tsc && vite build --mode analyze",
    "build:prod": "NODE_ENV=production tsc && vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:performance": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "analyze": "npx vite-bundle-analyzer dist/stats.html",
    "perf:audit": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "perf:ci": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json --chrome-flags='--headless'",
    "deploy": "npm run build && cp dist/index.html dist/404.html && gh-pages -d dist"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/icons-material": "^5.11.9",
    "@mui/material": "^5.11.10",
    "@reduxjs/toolkit": "^1.9.3",
    "@tanstack/react-query": "^5.87.1",
    "axios": "^1.3.4",
    "date-fns": "^2.29.3",
    "framer-motion": "^10.0.1",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.5",
    "react-hot-toast": "^2.4.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.8.1",
    "recharts": "^2.5.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.22.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/lodash": "^4.14.191",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/ui": "^0.29.7",
    "c8": "^7.12.0",
    "eslint": "^8.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "husky": "^8.0.3",
    "jsdom": "^21.1.1",
    "lighthouse": "^10.4.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "terser": "^5.16.1",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vitest": "^0.29.7",
    "webpack-bundle-analyzer": "^4.9.1",
    "gh-pages": "^5.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
